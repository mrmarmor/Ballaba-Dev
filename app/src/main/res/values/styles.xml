<resources>

    <!-- THEMES -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:button">@style/AppButton</item>
        <item name="android:textViewStyle">@style/textViewsStyle</item>
        <item name="font">@font/rubik_regular</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:fontFamily">400</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditText_enter_code" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/enter_code_code_edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/enter_code_code_edit_text_size</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/enter_code_code_edit_text_side_offset</item>
        <item name="android:layout_marginEnd">@dimen/enter_code_code_edit_text_side_offset</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="AppButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/textSize_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="background">@android:color/white</item>
    </style>

    <style name="textViewsStyle">
        <item name="font">@font/rubik_regular</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:fontFamily">400</item>
    </style>
    <!--END OF THEMES-->

    <style name="allMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="allWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mainActivity_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="mainActivity_button_filter" parent="mainActivity_button">
        <item name="android:textSize">@dimen/textSize_regular</item>
        <item name="android:textColor">@color/filter_textColor_aquaBlue</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="mainActivity_button_filter_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="divider_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_button_color</item>
        <item name="android:layout_marginStart">@dimen/propertyDescription_divider_horizontalOffset</item>
        <item name="android:layout_marginEnd">@dimen/propertyDescription_divider_horizontalOffset</item>
    </style>

    <style name="property_description_textViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textSize">@dimen/textSize_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/small_margin</item>
    </style>

</resources>
