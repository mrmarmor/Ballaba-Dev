<resources>

    <!-- THEMES -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <!--parent="Theme.AppCompat.Light.NoActionBar"-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:button">@style/AppButton</item>
<!--
        <item name="android:textViewStyle">@style/textViewsStyle</item>
-->
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_regular</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_gravity">start</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditText_enter_code" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/enter_code_code_edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/enter_code_code_edit_text_size</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/enter_code_code_edit_text_side_offset</item>
        <item name="android:layout_marginEnd">@dimen/enter_code_code_edit_text_side_offset</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="AppButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/textSize_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="AppButtonAnother" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_height_large</item>
        <item name="android:layout_marginTop">@dimen/button_next_offset</item>
        <item name="android:textSize">@dimen/textSize_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="AppButtonInactive" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/gray_button_color</item>
        <item name="android:alpha">0.50</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="textViewsStyle">
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>
    <!--END OF THEMES-->

    <style name="allMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="allWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mainActivity_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="mainActivity_button_filter" parent="mainActivity_button">
        <item name="android:textSize">@dimen/textSize_regular</item>
        <item name="android:textColor">@color/filter_textColor_aquaBlue</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="mainActivity_button_filter_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="divider_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_button_color</item>
        <item name="android:layout_marginStart">@dimen/propertyDescription_divider_horizontalOffset</item>
        <item name="android:layout_marginEnd">@dimen/propertyDescription_divider_horizontalOffset</item>
    </style>

    <style name="property_description_textViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textSize">@dimen/textSize_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/small_margin</item>
    </style>

    <style name="propertyDescriptionPayments_textView" parent="textViewsStyle">
        <item name="android:layout_width">@dimen/propertyDescription_payments_textView_width</item>
        <item name="android:layout_height">@dimen/propertyDescription_payments_textView_height</item>
        <item name="android:textSize">@dimen/textSize_regular</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="scoring_title_textViews" parent="textViewsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:textSize">@dimen/textSize_big</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="scoring_buttons_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="scoring_buttons" parent="textViewsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_height_large</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">@dimen/textSize_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:onClick">@{() -> presenter.onScoringButtonClick}</item>
    </style>

    <style name="dateOfBirth_spinner" parent="EditText_enter_code">
        <item name="android:layout_width">@dimen/scoring_dateOfBirth_spinner_width</item>
        <item name="android:layout_height">@dimen/scoring_dateOfBirth_spinner_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/enter_code_code_edit_text_side_offset</item>
        <item name="android:layout_marginEnd">@dimen/enter_code_code_edit_text_side_offset</item>
    </style>

    <style name="scoring_buttons_ok" parent="scoring_buttons">
        <item name="android:layout_margin">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/gray_button_color</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:onClick">onClickOk</item>
        <item name="android:text">@string/propertyDescription_root_button_text</item>
    </style>
    
    <style name="addProperty_textViews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>
    <style name="addProperty_editTexts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/addProperty_editText_height</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:background">@drawable/gray_border</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
    <style name="add_property_editTexts_with_number" parent="addProperty_editTexts">
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
    </style>
    <style name="addProperty_titles" parent="addProperty_textViews">
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="android:textSize">@dimen/textSize_big</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/pinkish_gray</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:colorAccent">@color/pinkish_gray</item>
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/pinkish_gray</item>
        <item name="android:calendarTextColor">@android:color/white</item>
    </style>

    <style name="subTextView" parent="allWrapContent">
        <item name="android:text">@string/addProperty_payments_sub</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:textColor">@color/gray_text_color</item>
    </style>

    <style name="flowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:elevation">-2dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="flRtl">true</item>
        <item name="flChildSpacing">@dimen/chip_childSpacing</item>
        <item name="flRowSpacing">@dimen/chip_rowSpacing</item>
        <item name="flChildSpacingForLastRow">align</item>
    </style>

</resources>
