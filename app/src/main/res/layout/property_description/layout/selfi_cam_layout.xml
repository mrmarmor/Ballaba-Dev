<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/camera_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="0.6"
        />

    <View
        android:id="@+id/top_divider"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="0.6"
        />

    <View
        android:id="@+id/end_divider"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/top_divider"
        app:layout_constraintEnd_toEndOf="@+id/bottom_divider"
        app:layout_constraintBottom_toTopOf="@+id/bottom_divider"
        android:alpha="0.6"
        />

    <View
        android:id="@+id/start_divider"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/top_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_divider"
        android:alpha="0.6"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/bottom_divider"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_divider"
        app:layout_constraintStart_toStartOf="@+id/bottom_divider"
        app:layout_constraintEnd_toEndOf="@+id/bottom_divider"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="יש ללחוץ על המסך לצילום"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/top_divider"
        app:layout_constraintBottom_toBottomOf="@+id/top_divider"
        app:layout_constraintStart_toStartOf="@+id/top_divider"
        app:layout_constraintEnd_toEndOf="@+id/top_divider"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="צילום סלפי"/>

    <View
        android:layout_width="5dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bottom_divider"
        app:layout_constraintStart_toEndOf="@+id/start_divider"/>

    <View
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bottom_divider"
        app:layout_constraintStart_toEndOf="@+id/start_divider"/>

    <View
        android:layout_width="5dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/top_divider"
        app:layout_constraintStart_toEndOf="@+id/start_divider"/>

    <View
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/top_divider"
        app:layout_constraintStart_toEndOf="@+id/start_divider"/>

    <View
        android:layout_width="5dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bottom_divider"
        app:layout_constraintEnd_toStartOf="@+id/end_divider"/>

    <View
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bottom_divider"
        app:layout_constraintEnd_toStartOf="@+id/end_divider"/>

    <View
        android:layout_width="5dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/top_divider"
        app:layout_constraintEnd_toStartOf="@+id/end_divider"/>

    <View
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/top_divider"
        app:layout_constraintEnd_toStartOf="@+id/end_divider"/>

</android.support.constraint.ConstraintLayout>