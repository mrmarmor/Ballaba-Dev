<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/my_properties_landlord_item_image_view"
        android:layout_width="344dp"
        android:layout_centerHorizontal="true"
        android:layout_height="164dp" />


    <LinearLayout
        android:id="@+id/my_properties_landlord_item_text_container"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/my_properties_landlord_item_image_view"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/my_properties_landlord_item_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdsadsa"/>

        <TextView
            android:text="U+2219"
            android:layout_gravity="center"
            android:layout_width="4dp"
            android:layout_height="4dp" />

        <TextView
            android:id="@+id/my_properties_landlord_item_rooms_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdsadsa"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="4dp"
            android:layout_height="4dp" />

        <TextView
            android:id="@+id/my_properties_landlord_item_size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdsadsa"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginRight="13dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/my_properties_landlord_item_text_container"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <Button
            android:text="מימוש הסכם הבטחה"
            android:layout_width="149dp"
            android:layout_height="40dp" />

        <Button
            android:text="ביטול הסכם הבטחה"
            android:layout_width="149dp"
            android:layout_height="40dp" />

    </LinearLayout>

</RelativeLayout>