<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/meeting_confirmation_header_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מחכה לראותך"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        />

    <TextView
        android:id="@+id/meeting_confirmation_second_header_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בעל הנכס יקבל הודעה על הגעתך"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/meeting_confirmation_header_TV"
        app:layout_constraintStart_toStartOf="@+id/meeting_confirmation_header_TV"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray_text_color"
        />

    <TextView
        android:id="@+id/meeting_confirmation_times_header_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בין השעות"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/meeting_confirmation_second_header_TV"
        app:layout_constraintStart_toStartOf="@+id/meeting_confirmation_second_header_TV"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray_text_color"/>

    <TextView
        android:id="@+id/meeting_confirmation_times_data_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18:00 - 21:00"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/meeting_confirmation_times_header_TV"
        app:layout_constraintStart_toEndOf="@+id/meeting_confirmation_times_header_TV"
        android:textColor="@color/gray_text_color"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/meeting_confirmation_address_header_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="כתובת:"
        app:layout_constraintTop_toBottomOf="@+id/meeting_confirmation_times_header_TV"
        app:layout_constraintStart_toStartOf="@+id/meeting_confirmation_times_header_TV"
        android:textColor="@color/gray_text_color"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/meeting_confirmation_address_data_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="זאב ברנדה 57 פ״ת"
        app:layout_constraintTop_toTopOf="@+id/meeting_confirmation_address_header_TV"
        app:layout_constraintStart_toEndOf="@+id/meeting_confirmation_address_header_TV"
        android:textColor="@color/gray_text_color"
        android:layout_marginStart="10dp"
        />
    
    <Button
        android:id="@+id/meeting_confirmation_BTN"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:textColor="@color/colorPrimary"
        android:text="אישור"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meeting_confirmation_address_data_TV"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/meeting_confirmation_cancel_BTN"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:text="ביטול"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/meeting_confirmation_BTN"
        app:layout_constraintTop_toBottomOf="@+id/meeting_confirmation_address_data_TV"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        />

</android.support.constraint.ConstraintLayout>