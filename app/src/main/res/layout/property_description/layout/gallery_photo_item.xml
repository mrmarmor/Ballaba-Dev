<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:layout_height="@dimen/property_gallery_item_height_linear"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/property_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/photo_home_grey_24"
        android:adjustViewBounds="true" />

    <ProgressBar
        android:id="@+id/galleryPhoto_progressBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/property_photo"
        app:layout_constraintBottom_toBottomOf="@+id/property_photo"
        app:layout_constraintStart_toStartOf="@+id/property_photo"
        app:layout_constraintEnd_toEndOf="@+id/property_photo"/>


</android.support.constraint.ConstraintLayout>