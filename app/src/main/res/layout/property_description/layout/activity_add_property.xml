<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="presenter"
            type="com.example.michaelkibenko.ballaba.Presenters.AddPropPresenter"/>
    </data>

    <ScrollView
        style="@style/allMatchParent"
        android:layoutDirection="rtl"
        android:background="@android:color/transparent">

        <com.example.michaelkibenko.ballaba.Views.NonSwipeableViewPager
            android:id="@+id/addProperty_viewPager"
            style="@style/allWrapContent" />

        <Button
            android:id="@+id/addProperty_landlord_button_next"
            style="@style/AppButtonAnother"
            android:layout_marginTop="@dimen/addProperty_button_next_offset"
            android:layout_marginBottom="@dimen/addProperty_button_next_offset"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:text="@string/addProperty_landlord_button_next" />

    </ScrollView>
</layout>