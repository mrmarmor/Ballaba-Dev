<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="presenter"
            type="com.example.michaelkibenko.ballaba.Presenters.PropertyManagementPresenter"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/propertyManagement_root"
        style="@style/allMatchParent"
        android:layoutDirection="rtl">

        <LinearLayout
            android:id="@+id/propertyManagement_tabs_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/propertyManagement_tabs_info_button"
                android:layout_height="49dp"
                android:tag="3"
                style="@style/mainActivity_button_filter"
                android:text="@string/myProperty_manage_viewPager_tab_info" />
            <Button
                android:id="@+id/propertyManagement_tabs_manage_button"
                android:tag="2"
                style="@style/mainActivity_button_filter"
                android:text="@string/myProperty_manage_viewPager_tab_manage" />
            <Button
                android:id="@+id/propertyManagement_tabs_interested_button"
                android:tag="1"
                style="@style/mainActivity_button_filter"
                android:text="@string/myProperty_manage_viewPager_tab_interested" />
            <Button
                android:id="@+id/propertyManagement_tabs_meetings_button"
                android:tag="0"
                style="@style/mainActivity_button_filter"
                android:text="@string/myProperty_manage_viewPager_tab_meetings" />

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/propertyManagement_viewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/propertyManagement_tabs_linearLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/myProp_info_margin_top"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin" />

    </android.support.constraint.ConstraintLayout>
</layout>