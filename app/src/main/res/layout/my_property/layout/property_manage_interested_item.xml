<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_margin="16dp"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/property_manage_interested_item_image_btn"
        android:layout_width="40dp"
        android:layout_height="40dp" />


    <TextView
        android:id="@+id/property_manage_interested_item_text_view"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/property_manage_interested_item_image_btn"
        android:text="שרי בניהו"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <CheckBox
        android:checked="false"
        android:id="@+id/property_manage_interested_item_check_box"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>