<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/property_manage_meetings_item_image_btn"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/property_manage_meetings_item_image_btn">

            <TextView
                android:id="@+id/property_manage_meetings_item_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="שרי בניהו"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/property_manage_meetings_item_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/property_manage_meetings_item_name_text_view"
                android:layout_marginRight="16dp"
                android:text="יום שני, 23 לאפריל בשעה 20:00"
                android:textColor="#8b000000
"
                android:textSize="14sp" />

        </RelativeLayout>

        <CheckBox
            android:id="@+id/property_manage_meetings_item_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:checked="false" />

    </RelativeLayout>

</RelativeLayout>