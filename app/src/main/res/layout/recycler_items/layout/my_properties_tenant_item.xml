<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white"
    android:elevation="@dimen/elevation"
    android:layoutDirection="rtl">

    <ImageView
        android:id="@+id/my_properties_tenant_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/photo_home_grey_24" />

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_below="@+id/my_properties_tenant_item_image_view"
        android:id="@+id/my_properties_tenant_item_price_text_container"
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_properties_tenant_item_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:textColor="@color/colorAccentDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_properties_tenant_item_price_static_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:layout_marginRight="2dp"
            android:text="לחודש"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_properties_tenant_item_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_properties_tenant_item_price_text_container"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">


        <TextView

            android:id="@+id/my_properties_tenant_item_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:text="אחד העם , תל אביב"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/my_properties_tenant_item_first_bullet"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/my_properties_tenant_item_rooms_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 חדרים"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/my_properties_tenant_item_second_bullet"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/my_properties_tenant_item_size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="63 מטר"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>