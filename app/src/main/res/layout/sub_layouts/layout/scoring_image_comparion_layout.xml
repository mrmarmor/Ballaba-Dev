<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comparion_activity_background">


    <RelativeLayout
        android:id="@+id/scoring_image_comparison_result_layout"
        android:layout_width="80dp"
        android:visibility="gone"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/blue_circular_border">

        <ImageView
            android:id="@+id/scoring_image_comparison_result_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/check_blue_24" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/scoring_image_comparison_activity_progress_bar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/scoring_image_comparison_activity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoring_image_comparison_activity_progress_bar"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="בודק התאמה"
        android:textSize="16sp" />


    <Button
        android:id="@+id/scoring_image_comparison_activity_try_again_btn"
        android:layout_below="@+id/scoring_image_comparison_result_layout"
        android:layout_width="@dimen/enter_code_send_again_button_width"
        android:layout_height="@dimen/enter_code_send_again_button_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/enter_code_send_again_button_top_offset"
        android:alpha="0.50"
        android:background="@color/gray_button_color"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:gravity="center"
        android:text="נסה שנית"
        android:textColor="@color/enter_code_send_again_button_text_gray"
        android:textSize="@dimen/enter_code_send_again_text_size"/>


</RelativeLayout>