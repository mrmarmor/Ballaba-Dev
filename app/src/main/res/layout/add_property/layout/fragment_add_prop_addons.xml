<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--<data>
        <variable
            name="presenter"
            type="com.example.michaelkibenko.ballaba.Presenters.AddPropertyPresenter"/>
    </data>-->

    <ScrollView
        style="@style/allWrapContent"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/addProperty_addons_root"
            style="@style/allMatchParent"
            android:layout_margin="@dimen/small_margin"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/addProperty_addons_furniture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white" >
                <TextView
                    style="@style/addProperty_titles"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="@string/addProperty_addons_furniture_title" />

                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/addProperty_addons_furniture_flowLayout"
                    android:tag="furniture"
                    style="@style/flowLayout" />
                <TextView
                    style="@style/addProperty_titles"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="@string/addProperty_addons_electronics_title" />

                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/addProperty_addons_electronics_flowLayout"
                    android:tag="electronics"
                    style="@style/flowLayout"
                    android:paddingBottom="@dimen/activity_vertical_margin" />
                <!--<android.support.v7.widget.RecyclerView
                    android:id="@+id/addProperty_addons_electronicsRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white" />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addProperty_extras_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:orientation="vertical"
                android:background="@android:color/white" >
                <TextView
                    style="@style/addProperty_titles"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="@string/addProperty_addons_extras_title" />

                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/addProperty_addons_extras_flowLayout"
                    android:tag="extras"
                    style="@style/flowLayout"
                    android:paddingBottom="@dimen/activity_vertical_margin" />
            </LinearLayout>

            <Button
                android:id="@+id/addProperty_addons_button_next"
                style="@style/AppButtonAnother"
                android:layout_marginBottom="@dimen/button_next_offset"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/button_next" />

        </LinearLayout>
    </ScrollView>
</layout>