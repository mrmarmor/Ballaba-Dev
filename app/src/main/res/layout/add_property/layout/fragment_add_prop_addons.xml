<?xml version="1.0" encoding="utf-8"?><!-- TODO DO NOT CHANGE TAGS HERE. IT IS SENT TO THE SERVER AS KEYS, AND SERVER WILL NOT RECOGNIZE IF YOU CHANGE IT!! -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/allWrapContent"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:id="@+id/addProperty_addons_root"
        style="@style/allMatchParent"
        android:layout_margin="@dimen/small_margin"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/addProperty_addons_furniture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical">

            <TextView
                style="@style/addProperty_titles"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/addProperty_addons_furniture_title" />

            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/addProperty_addons_furniture_flowLayout"
                style="@style/flowLayout"
                android:tag="furniture" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:background="#ececec" />

            <RelativeLayout
                android:id="@+id/addProperty_addons_furniture_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addProperty_addons_furniture_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="לא גמיש" />

                <Switch
                    android:id="@+id/addProperty_addons_furniture_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layoutDirection="ltr" />

            </RelativeLayout>

            <TextView
                style="@style/addProperty_titles"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/addProperty_addons_electronics_title" />

            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/addProperty_addons_electronics_flowLayout"
                style="@style/flowLayout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:tag="electronics" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:background="#ececec" />

            <RelativeLayout
                android:id="@+id/addProperty_addons_electronics_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addProperty_addons_electronics_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="לא גמיש" />

                <Switch
                    android:id="@+id/addProperty_addons_electronics_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layoutDirection="ltr" />

            </RelativeLayout>

            <!--<android.support.v7.widget.RecyclerView
                android:id="@+id/addProperty_addons_electronicsRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" />-->
        </LinearLayout>


        <LinearLayout
            android:id="@+id/addProperty_pet_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@android:color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/addProperty_addons_pet_button"
                android:layout_width="156dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/chips_button"
                android:gravity="center"
                android:text="אפשר חיות מחמד"
                android:textColor="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:background="#ececec" />

            <RelativeLayout
                android:id="@+id/addProperty_addons_pet_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addProperty_addons_pet_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="לא גמיש" />

                <Switch
                    android:id="@+id/addProperty_addons_pet_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layoutDirection="ltr" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/addProperty_extras_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                style="@style/addProperty_titles"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/addProperty_addons_extras_title" />

            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/addProperty_addons_extras_flowLayout"
                style="@style/flowLayout"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:tag="attachments" />
        </LinearLayout>


        <Button
            android:id="@+id/addProperty_addons_button_next"
            style="@style/AppButtonAnother"
            android:layout_marginBottom="@dimen/button_next_offset"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/button_next" />

    </LinearLayout>
</ScrollView>