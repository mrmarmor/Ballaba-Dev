<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="presenter"
            type="com.example.michaelkibenko.ballaba.Fragments.AddProperty.AddPropLandlordFrag"/>
    </data>

    <ScrollView
        style="@style/allWrapContent"
        android:layoutDirection="rtl"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/addProperty_root"
            style="@style/allMatchParent"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:elevation="@dimen/elevation"
                android:orientation="vertical"
                android:background="@android:color/white" >
                <TextView
                    android:id="@+id/addProp_profile_title_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/tiny_margin"
                    android:fontFamily="@font/rubik_medium"
                    android:text="@string/addProperty_landlord_profileImage_title" />

                <TextView
                    android:id="@+id/addProp_profile_description_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:textSize="@dimen/textSize_small"
                    android:textColor="@color/gray_text_color"
                    android:text="@string/addProperty_landlord_profileImage_description" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/addProp_profile_imageButton"
                    style="@style/allWrapContent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_gravity="center_horizontal"
                    android:elevation="@dimen/elevation"
                    android:src="@drawable/transfer_blue_36" />
                <!--                android:onClick="@{() -> presenter.onClickProfileImage() }"-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addProperty_editTexts_Root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:elevation="@dimen/elevation"
                android:orientation="vertical"
                android:background="@android:color/white" >
                <TextView
                    style="@style/addProperty_textViews"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/addProperty_landlord_firstName" />
                <EditText
                    android:id="@+id/addProp_firstName_editText"
                    android:tag="firstName"
                    style="@style/addProperty_editTexts"
                    android:inputType="textPersonName"
                    android:text="@{presenter.user.first_name}"
                    android:hint="@string/addProperty_landlord_firstName_hint" />

                <TextView style="@style/addProperty_textViews" android:text="@string/addProperty_landlord_lastName" />
                <EditText
                    android:id="@+id/addProp_lastName_editText"
                    android:tag="lastName"
                    style="@style/addProperty_editTexts"
                    android:inputType="textPersonName"
                    android:text="@{presenter.user.last_name}"
                    android:hint="@string/addProperty_landlord_lastName_hint" />

                <TextView style="@style/addProperty_textViews" android:text="@string/addProperty_landlord_email" />
                <EditText
                    android:id="@+id/addProp_email_editText"
                    android:tag="email"
                    style="@style/addProperty_editTexts"
                    android:inputType="textEmailAddress"
                    android:text="@{presenter.user.email}"
                    android:hint="@string/addProperty_landlord_email_hint" />

                <TextView style="@style/addProperty_textViews" android:text="@string/addProperty_landlord_phone" />
                <EditText
                    android:id="@+id/addProp_phone_editText"
                    android:tag="phone"
                    style="@style/addProperty_editTexts"
                    android:inputType="phone"
                    android:text="@{presenter.user.phone}"
                    android:hint="@string/addProperty_landlord_phone_hint" />
                <!--android:text="@{presenter.phone}"-->

                <!-- TODO add city from BallabaUser -->
                <TextView style="@style/addProperty_textViews" android:text="@string/addProperty_landlord_city" />
                <EditText
                    android:id="@+id/addProp_city_editText"
                    android:tag="city"
                    style="@style/addProperty_editTexts"
                    android:hint="@string/addProperty_landlord_city_hint" />

                <TextView style="@style/addProperty_textViews" android:text="@string/addProperty_landlord_address" />
                <EditText
                    android:id="@+id/addProp_address_editText"
                    android:tag="address"
                    style="@style/addProperty_editTexts"
                    android:hint="@string/addProperty_landlord_address_hint" />

                <TextView style="@style/addProperty_textViews" android:text="@string/addProperty_landlord_buildingNumber" />
                <EditText
                    android:id="@+id/addProp_buildingNumber_editText"
                    android:layout_width="@dimen/addProperty_editText_short_width"
                    android:tag="buildingNumber"
                    style="@style/addProperty_editTexts"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:hint="@string/addProperty_landlord_buildingNumber_hint" />

                <TextView
                    style="@style/allWrapContent"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:textSize="@dimen/textSize_small"
                    android:textColor="@color/gray_text_color"
                    android:text="@string/addProperty_landlord_integrity_announcement" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:elevation="@dimen/elevation"
                android:orientation="vertical"
                android:background="@android:color/white" >
                <TextView
                    android:id="@+id/addProp_aboutYourself_title_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSize_big"
                    android:text="@string/addProperty_landlord_aboutYourself_title" />
                <EditText
                    android:id="@+id/addProp_aboutYourself_editText"
                    android:tag="aboutYourself"
                    style="@style/addProperty_editTexts"
                    android:layout_height="@dimen/addProperty_aboutYourself_editText_height"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:padding="@dimen/small_margin"
                    android:gravity="start"
                    android:hint="@string/addProperty_landlord_aboutYourself_hint" />

            </LinearLayout>

            <Button
                android:id="@+id/addProperty_landlord_button_next"
                style="@style/AppButtonAnother"
                android:layout_marginTop="@dimen/addProperty_button_next_offset"
                android:layout_marginBottom="@dimen/addProperty_button_next_offset"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/addProperty_landlord_button_next" />
            <!--            android:onClick="@{() -> presenter.onClick()}"-->

        </LinearLayout>
    </ScrollView>
</layout>