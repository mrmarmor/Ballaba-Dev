<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="presenter"
            type="com.example.michaelkibenko.ballaba.Presenters.MainPresenter"/>
    </data>
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainScreen_drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.constraint.ConstraintLayout
            style="@style/allMatchParent"
            android:layoutDirection="rtl">

            <Button
                android:id="@+id/mainScreen_search_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mainScreen_searchButton_text"
                android:textSize="@dimen/textSize_regular"
                android:layout_margin="@dimen/small_margin"
                android:background="@android:color/transparent"
                android:drawableStart="@android:drawable/ic_search_category_default"
                android:drawableTint="@color/gray_button_color"
                android:onClick="@{() -> presenter.onClickToSelectCity()}"
                />

            <ImageButton
                android:id="@+id/mainScreen_toGoogleMap_imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/mainScreen_search_button"
                android:onClick="@{() -> presenter.onClickToGoogleMap()}"
                android:background="@android:color/transparent"
                android:src="@drawable/disabled"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/mainScreen_viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/mainScreen_search_button" />

        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/mainScreen_navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:menu="@menu/activity_main_drawer"
            app:headerLayout="@layout/nav_header_main" />

    </android.support.v4.widget.DrawerLayout>
</layout>